<% include ../partials/header %>
<br>
<div class="row" style="margin-left:50px;margin-right:50px">
    <form action="http://localhost:9090/employee/update/<%= item[0].e_id %>" method="post" class="col s12">
        <input type="hidden" name="e_id" value="<%= item[0].e_id %>">

        <div class="form-group row">
            <label for="e_name" class="col-2 col-form-label">Name</label>
            <div class="col-10">
                <input type="text" name="e_name" value="<%= item[0].e_name %>" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label for="e_address" class="col-2 col-form-label">Address</label>
            <div class="col-10">
                <input type="text" name="e_address" value="<%= item[0].e_address %>" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label for="e_join_date" class="col-2 col-form-label">Joining Date</label>
            <div class="col-10">
                <input type="date" name="e_join_date" value="<%= item[0].e_join_date %>" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <input type="submit" name="submit" value="Update" class="btn btn-primary btn-lg">
            </div>
        </div>
    </form>
</div>
<% include ../partials/footer %>